  require 'date'

  xmldoc = XML::Smart.open('crasher.xml')
  xpath = '/eveapi/currentTime/text()'
  text_str = xmldoc.root.find(xpath)[0]
  puts DateTime.parse(text_str)
  # or text_str.dup

